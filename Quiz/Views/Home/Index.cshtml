@model QuizApp.ViewModel.QuizListViewModel

@{
    ViewBag.Title = "Quizs";
}

<div class="Page-Connexion">
    <h2>Présentation</h2>
    <p>
        Chèr(e) candidat(e), bienvenue à vous !
        Vous allez débuter un parcours de recrutement Jehann
        qui comptera pour votre évaluation.
        Cette méthode, qui contient plusieurs  questions,
        Vous donne l’opportunité d’exprimer vos compétences
        au-delà de votre seul CV.
    </p>
    @if (Session["user_role"] != null)
    {
        <button type="button" value="Logout" class="btn btn-danger" onclick="location.href='@Url.Action( "Logout", "Login")'">Logout</button>
    }
    else
    {
        <button type="button" value="Connexion" class="btn btn-primary" onclick="location.href='@Url.Action( "Connexion", "Login")'">Connexion</button>
    }
</div>

